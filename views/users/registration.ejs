<% include("../layouts/header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-3">User Registration Form</h1>
                    </div>
                    <div class="card-body">
                        <form id="registrationForm" action="" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
                                <div class="invalid-feedback">Name is required and cannot be blank.</div>
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
                                <div class="invalid-feedback">Please enter a valid email address.</div>
                            </div>
                            <div class="form-group">
                                <label for="mobile">Mobile Number</label>
                                <input type="number" class="form-control" id="mobile" name="mobile" placeholder="Enter Mobile Number" required>
                            </div>
                            <div class="form-group">
                                <label for="image">Upload Image</label>
                                <input type="file" class="form-control-file" id="image" name="image" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </form>
                        <p class="mt-3">Already Have an Account? Click here to <a href="/">Sign in</a></p>
                        <% if (typeof message !== 'undefined') { %>
                            <p class="<%= messageType === 'success' ? 'alert alert-success' : 'alert alert-danger' %>" role="alert"><%= message %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('registrationForm').addEventListener('submit', function(event) {
            var form = this;
            var isValid = true;

            // Name validation
            var name = form.name.value.trim();
            if (!name) {
                isValid = false;
                form.name.classList.add('is-invalid');
            } else {
                form.name.classList.remove('is-invalid');
            }

            // Email validation
            var email = form.email.value.trim();
            if (!email || !email.match(/^[^@\s]+@[^@\s]+\.[^@\s]+$/)) {
                isValid = false;
                form.email.classList.add('is-invalid');
            } else {
                form.email.classList.remove('is-invalid');
            }

            if (!isValid) {
                event.preventDefault();
            }
        });
    </script>
    
<% include("../layouts/footer.ejs") %>


