<% include('../layouts/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

  <div class="container mt-5">
    <div class="row">
      <div class="col-12">
        <h1 class="mb-4">Dashboard</h1>
  
        <a href="/admin/new_user" class="btn btn-primary mb-3">Add New User</a>
  
        <form action="/admin/dashboard" method="GET" class="d-flex justify-content-center mb-4">
        <div class="input-group" style="max-width: 600px;">
          <input type="text" class="form-control" placeholder="Search Username" name="search">
          <div class="input-group-append">
            <button type="submit" class="btn btn-outline-primary">Search</button>
          </div>
        </div>
      </form>
  
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Image</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (users.length > 0) { %>
                <% for (let i = 0; i < users.length; i++) { %>
                  <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].mobile %></td>
                    <td><img src="/userImages/<%= users[i].image %>" alt="<%= users[i].name %>" class="img-fluid" style="max-width: 200px; height: auto;"></td>
                    <td>
                      <a href="/admin/edit_user?id=<%= users[i]._id %>" class="btn btn-sm btn-warning">Edit</a>
                      <a href="/admin/delete_user?id=<%= users[i]._id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                  </tr>
                <% } %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center">Users Not Found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
  
        <a href="/admin/home" class="btn btn-secondary mt-3">Home</a>
      </div>
    </div>
  </div>
  
<% include('../layouts/footer.ejs') %>
  