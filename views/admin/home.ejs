<% include('../layouts/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h1 class="mb-4">Welcome, <%= admin.name %></h1>
    
          <a href="/admin/dashboard" class="btn btn-primary mb-3">Dashboard</a>
    
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="/userimages/<%= admin.image %>" class="img-fluid mb-3" alt="<%= admin.image %>" style="max-width: 100%; height: auto;">
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Email:</strong> <%= admin.email %>
              </li>
              <li class="list-group-item">
                <strong>Mobile:</strong> <%= admin.mobile %>
              </li>
            </ul>
          </div>
    
          <a href="/admin/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
    
<% include('../layouts/footer.ejs') %>