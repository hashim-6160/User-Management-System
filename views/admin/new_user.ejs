<% include("../layouts/header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h1 class="mb-4 text-center">Add New User</h1>
          
          <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-danger text-center"><%= message %></div>
          <% } %>
    
          <form id="newUserForm" action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
              <div class="invalid-feedback">Name is required and cannot be blank.</div>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
            <div class="form-group">
              <label for="mobile">Mobile Number</label>
              <input type="number" class="form-control" id="mobile" name="mobile" placeholder="Enter Mobile Number" required>
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control-file" id="image" name="image" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add User</button>
          </form>
    
          <a href="/admin/dashboard" class="btn btn-secondary btn-block mt-3">Back</a>
        </div>
      </div>
    </div>

    <script>
        document.getElementById('newUserForm').addEventListener('submit', function(event) {
            var form = this;
            var isValid = true;

            // Name validation
            var name = form.name.value.trim();
            if (!name) {
                isValid = false;
                form.name.classList.add('is-invalid');
            } else {
                form.name.classList.remove('is-invalid');
            }

            // Email validation
            var email = form.email.value.trim();
            if (!email || !email.match(/^[^@\s]+@[^@\s]+\.[^@\s]+$/)) {
                isValid = false;
                form.email.classList.add('is-invalid');
            } else {
                form.email.classList.remove('is-invalid');
            }

            if (!isValid) {
                event.preventDefault();
            }
        });
    </script>

